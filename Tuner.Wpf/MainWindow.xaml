<Window x:Class="Tuner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:constrols="clr-namespace:Tuner.Wpf.Constrols"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Tuner.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow"
        Width="525"
        Height="350"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="StringStyle" TargetType="constrols:String">
            <Setter Property="StringThickness" Value="5" />
        </Style>

        <Style x:Key="SplittingStyle" TargetType="Border">
            <Setter Property="Width" Value="5" />
            <Setter Property="Margin" Value="30,0" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Height="{Binding ElementName=StringStackPanel,
                                     Path=ActualHeight}"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <Panel.Background>
                <ImageBrush ImageSource="palisander.jpg"
                            TileMode="FlipX"
                            Viewport="0,0,524,349"
                            ViewportUnits="Absolute" />
            </Panel.Background>
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
            <Border Background="Black"
                    BorderThickness="0"
                    Style="{StaticResource SplittingStyle}" />
        </StackPanel>
        <UniformGrid x:Name="StringStackPanel"
                     VerticalAlignment="Stretch"
                     Grid.IsSharedSizeScope="True"
                     Rows="6">
            <constrols:String BorderThickness="0"
                              StringBackground="Red"
                              StringName="E2"
                              Style="{StaticResource StringStyle}" />
            <constrols:String BorderThickness="0"
                              StringBackground="Yellow"
                              StringName="A2"
                              Style="{StaticResource StringStyle}" />
            <constrols:String BorderThickness="0"
                              StringBackground="DeepSkyBlue"
                              StringName="D3"
                              Style="{StaticResource StringStyle}" />
            <constrols:String BorderThickness="0"
                              StringBackground="Orange"
                              StringName="G3"
                              Style="{StaticResource StringStyle}" />
            <constrols:String BorderThickness="0"
                              StringBackground="GreenYellow"
                              StringName="B3"
                              Style="{StaticResource StringStyle}" />
            <constrols:String BorderThickness="0"
                              StringBackground="DeepPink"
                              StringName="E4"
                              Style="{StaticResource StringStyle}" />
        </UniformGrid>
        <constrols:CircularProgressBar x:Name="CircularProgressBar"
                                       Width="100"
                                       Height="100"
                                       Maximum="100"
                                       ProgressThickness="{Binding ElementName=ProgressThicknessSlider,
                                                                   Path=Value}"
                                       StartAngle="{Binding StartAngle}"
                                       Visibility="Collapsed"
                                       Value="{Binding Angle}" />
    </Grid>
</Window>
