<Window x:Class="Tuner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuner.Wpf"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        >
    <Window.Resources>
        <Style x:Key="StringStyle" TargetType="Border" >
            <Setter Property="Height" Value="5"/>
        </Style>
        <Style x:Key="SplittingStyle" TargetType="Border" >
            <Setter Property="Width" Value="5"/>
            <Setter Property="Margin" Value="30,0"></Setter>
            <Setter Property="VerticalAlignment" Value="Stretch"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Height="{Binding ElementName=StringStackPanel, Path=ActualHeight}" VerticalAlignment="Top">
            <Panel.Background>
                <ImageBrush ImageSource="palisander.jpg" TileMode="Tile" Viewport="0,0,524,349" ViewportUnits="Absolute" />
            </Panel.Background>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
            <Border Style="{StaticResource SplittingStyle}"  BorderThickness="0" Background="Black"/>
        </StackPanel>
        <Grid x:Name="StringStackPanel" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="Red"/>
            <Border Grid.Row="1" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="Yellow"/>
            <Border Grid.Row="2" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="DeepSkyBlue"/>
            <Border Grid.Row="3" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="Orange"/>
            <Border Grid.Row="4" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="GreenYellow"/>
            <Border Grid.Row="5" Style="{StaticResource StringStyle}"  BorderThickness="0" Background="DeepPink"/>
        </Grid>
        <local:CircularProgressBar Height="100" Width="100" x:Name="CircularProgressBar"   
                                   StartAngle="{Binding StartAngle}" 
                                   ProgressThickness="{Binding ElementName=ProgressThicknessSlider, Path=Value}" 
                                   Value="{Binding Angle}"
                                   Maximum="100"
                                   Visibility="Collapsed"
                                   />
    </Grid>
</Window>
