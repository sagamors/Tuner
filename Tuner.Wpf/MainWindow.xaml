<Window x:Class="Tuner.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tuner.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        >
    <Grid>
        <StackPanel>
            <TextBlock Text="StartAngle"/>
            <Slider Maximum="360" Minimum="0" Value="{Binding StartAngle}"/>
            <TextBlock Text="Angle"/>
            <Slider Maximum="360" Minimum="0" Value="{Binding Angle}"/>
            <TextBlock Text="Thickness"/>
            <Slider x:Name="ProgressThicknessSlider" Maximum="360" Minimum="0" Value="10" />
        </StackPanel>
        <local:CircularProgressBar Height="100" Width="100" x:Name="CircularProgressBar"   
                                   StartAngle="{Binding StartAngle}" 
                                   ProgressThickness="{Binding ElementName=ProgressThicknessSlider, Path=Value}" 
                                   Value="{Binding Angle}"
                                   Maximum="100"/>
        
    </Grid>
</Window>
