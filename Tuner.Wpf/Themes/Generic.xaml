    <Style TargetType="{x:Type constrols:TuneProgress}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type constrols:TuneProgress}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <constrols:CircularProgressBar x:Name="CircularProgressBar"
                                               Width="100"
                                               Height="100"
                                               Maximum="100"
                                               ProgressThickness="10" />
                            <constrols:Arc Width="100" Height="100" StartAngle="45" Angle="0" Stroke="Black" StrokeThickness="1000"/>
                        </Grid>
      
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
